@model PagedList.IPagedList<DelmoChickenWebApp.Models.Product>
@{
    ViewBag.Title = "ProductList";
}

<h2>Our Products</h2>

<div class="form-group" >
    <form method="get" action="@Url.Action("ProductList")" data-otf-ajax="true" data-otf-target="#restaurantList">
        <table align="center">
            <tr>
                <td>
                    <input class="form-control" type="search" placeholder="Product..." name="searchTerm" data-otf-autocomplete="@Url.Action("Autocomplete")" />
                </td>
                <td>
                    <input class=" glyphicon-edit btn btn-success" type="submit" value="Search By Name" />
                </td>
            </tr>
        </table>
    </form>
</div>
@Html.Partial("_Products", Model);
